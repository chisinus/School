@model string

@{
    Layout = null;
}

@helper ListItems(string[] items)
{
    <ul>
        @foreach (string item in items)
        {
            <li>@item</li>
        }
    </ul>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        Here are the fruits:
        @ListItems(ViewBag.Fruits)
    </div>

    <div>
        Here are the cities:
        @ListItems(ViewBag.Cities)
    </div>

    <div>
        Here is the message: <p>@Model</p>
    </div>
</body>
</html>
